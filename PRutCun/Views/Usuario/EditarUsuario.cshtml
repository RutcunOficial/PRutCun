@model PRutCun.Models.Usuario
@{
    ViewData["Title"] = "Usuario";
    Layout = "_LayoutDashboard";
}

<div class="container-fluid">
    <div class="offset-12">
        <div class="card border">
            <div class="card-header bg-dark">
                <h1 class="text-white"><strong>Editar</strong></h1>
            </div>

            <div class="card-body">

                <form asp-action="UsuarioEditar" method="post">
                    @*                    Id Del usuario oculto*@
                    <input type="hidden" asp-for="PkUser" />
                    <div class="form-group">
                        <label asp-for="Nombre">Nombre</label>
                        <input asp-for="Nombre" class="form-control" placeholder="ingresar nombre" required>
                    </div>
                    <div class="form-group">
                        <label asp-for="Nickname">Descripcion</label>
                        <input asp-for="Nickname" class="form-control" placeholder="ingresar Nickname" required>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password">Password</label>
                        <input asp-for="Password" class="form-control" placeholder="ingresar Password" required>
                    </div>
                    <div class="form-group">
                        <label asp-for="FkRol">Rol</label>
                        <input asp-for="FkRol" class="form-control" placeholder="ingresar el FkRol" required>
                        @*<input asp-for="Rol" />*@
                    </div>
                    <div class="container-fluid">
                        <button type="submit" class="btn btn-success"><i class="fa-solid fa-feather"></i> Editar</button>
                    </div>
                </form>
                <br />
                <div class="container-fluid">
                    <a class="btn btn-outline-success" asp-controller="Usuario" asp-action="Index"> Volver</a>
                </div>
            </div>
        </div>
    </div>
</div>
