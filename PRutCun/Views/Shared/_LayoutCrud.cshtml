
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PRutCun</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    @*    <link rel="stylesheet" href="~/css/site.css" />
    *@
    <link rel="stylesheet" href="~/css/sitecrud.css" />

@*    Para el login
*@    
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://kit.fontawesome.com/06f80f73dc.js" crossorigin="anonymous"></script>
    <script src="https://kit.fontawesome.com/b99e675b6e.js"></script>
    <script src="https://kit.fontawesome.com/cc69f106cf.js" crossorigin="anonymous"></script>
</head>
<body>
    <nav id="sidebarMenu" class="collapse d-lg-block sidebar collapse bg-white">
        <div class="position-sticky">
            <div class="list-group list-group-flush mx-3 mt-4">
                <a class="list-group-item list-group-item-action py-2 ripple" aria-current="true" asp-controller="Home" asp-action="Index"><i class="fa-solid fa-bus-simple"></i><span>Rutcun</span></a>
                <a class="list-group-item list-group-item-action py-2 ripple" asp-controller="Mapas" asp-action="Index"><i class="fas fa-users fa-fw me-3"></i><span>Mapas</span></a>
                <a class="list-group-item list-group-item-action py-2 ripple" asp-controller="Trasporte" asp-action="Index"><i class="fa-solid fa-basket-shopping"></i><span>Transporte</span></a>
                <a class="list-group-item list-group-item-action py-2 ripple" asp-controller="Usuario" asp-action="Index"><i class="fa-solid fa-basket-shopping"></i><span>Usuario</span></a>
                <a class="list-group-item list-group-item-action py-2 ripple" asp-controller="Home" asp-action="Index"><i class="fa-solid fa-right-from-bracket"></i><span>Salir</span></a>
            </div>
        </div>
    </nav>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
