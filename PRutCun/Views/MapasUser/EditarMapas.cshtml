@model PRutCun.Models.Mapas
@{
    ViewData["Title"] = "Mapas";
    Layout = "_LayoutDashboard";
}

<div class="container-fluid">
    <div class="offset-12">
        <div class="card border">
            <div class="card-header bg-dark">
                <h1 class="text-white"><strong>Editar</strong></h1>
            </div>

            <div class="card-body">

                <form asp-action="MapasEditar" method="post">
                    @*                    Id Del usuario oculto*@
                    <input type="hidden" asp-for="PkMapas" />
                    <div class="form-group">
                        <label asp-for="MapaUrl">Mapa</label>
                        <input asp-for="MapaUrl" class="form-control" placeholder="ingresar Mapas" required>
                    </div>
                    <div class="form-group">
                        <label asp-for="Fktrasportes">Trasporte</label>
                        <input asp-for="Fktrasportes" class="form-control" placeholder="ingresar FkTrasporte" required>
                    </div>
                    <div class="container-fluid">
                        <button type="submit" class="btn btn-success"><i class="fa-solid fa-feather"></i> Editar</button>
                    </div>
                </form>
                <br />
                <div class="container-fluid">
                    <a class="btn btn-outline-success" asp-controller="Mapas" asp-action="Index"> Volver</a>
                </div>
            </div>
        </div>
    </div>
</div>
